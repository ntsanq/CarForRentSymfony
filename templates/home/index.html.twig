{% include 'layouts/header.html.twig' %}
{% block body %}
    <div class="album py-5 bg-light">

        <div class="container">
            {% for car in cars %}
                <div class="col-md-4 float-left">
                    <div class="card mb-4 box-shadow">
                        <img class="card-img-top"
                             src="{{ car.img }}"
                             alt="Card image cap"
                             style="height: 210px; object-fit: cover"
                        >
                        <div class="card-body">
                            <p class="card-text">{{ car.name }}</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Add
                                    </button>
                                    <button type="button" class="btn btn-sm btn-outline-secondary">Buy now
                                    </button>
                                </div>
                                <small class="text-muted"> {{ car.price }}</small>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
